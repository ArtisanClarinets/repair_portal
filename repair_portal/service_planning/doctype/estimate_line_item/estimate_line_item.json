{
  "doctype": "DocType",
  "name": "Estimate Line Item",
  "module": "Service Planning",
  "istable": 1,
  "custom": 0,
  "engine": "InnoDB",
  "field_order": [
    "region_id",
    "component_type",
    "line_role",
    "description",
    "part_code",
    "quantity",
    "hours",
    "rate",
    "amount"
  ],
  "fields": [
    {
      "fieldname": "region_id",
      "label": "Region ID",
      "fieldtype": "Data",
      "in_list_view": 1
    },
    {
      "fieldname": "component_type",
      "label": "Component Type",
      "fieldtype": "Data",
      "in_list_view": 1
    },
    {
      "fieldname": "line_role",
      "label": "Line Role",
      "fieldtype": "Select",
      "options": "Part\nLabor\nSetup",
      "in_list_view": 1
    },
    {
      "fieldname": "description",
      "label": "Service Description",
      "fieldtype": "Data",
      "reqd": 1,
      "in_list_view": 1
    },
    {
      "fieldname": "part_code",
      "label": "Part Code",
      "fieldtype": "Link",
      "options": "Item",
      "in_list_view": 1
    },
    {
      "default": "0",
      "fieldname": "quantity",
      "label": "Quantity",
      "fieldtype": "Float",
      "precision": "2"
    },
    {
      "default": "0",
      "fieldname": "hours",
      "label": "Hours",
      "fieldtype": "Float",
      "precision": "2"
    },
    {
      "fieldname": "rate",
      "label": "Rate",
      "fieldtype": "Currency",
      "options": "Currency",
      "in_list_view": 1
    },
    {
      "fieldname": "amount",
      "label": "Amount",
      "fieldtype": "Currency",
      "depends_on": "eval: doc.hours || doc.quantity",
      "options": "Currency",
      "in_list_view": 1
    }
  ],
  "permissions": [
    {
      "role": "System Manager",
      "read": 1,
      "write": 1,
      "create": 1,
      "delete": 1
    },
    {
      "role": "Repair Manager",
      "read": 1,
      "write": 1,
      "create": 1,
      "delete": 1
    },
    {
      "role": "Technician",
      "read": 1,
      "write": 1,
      "create": 1,
      "delete": 1
    }
  ]
}
