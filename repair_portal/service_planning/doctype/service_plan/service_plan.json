		{
			"role": "System Manager",
			"read": 1,
			"write": 1,
			"create": 1,
			"delete": 1
		},
		{
			"role": "Repair Manager",
			"read": 1,
			"write": 1,
			"create": 1,
			"delete": 1
		},
		{
			"role": "Technician",
			"read": 1,
			"create": 1
		}
	]
}