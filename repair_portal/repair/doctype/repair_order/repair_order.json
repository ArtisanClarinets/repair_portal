{
  "doctype": "DocType",
  "name": "Repair Order",
  "module": "Repair",
  "custom": 0,
  "istable": 0,
  "track_changes": 1,
  "engine": "InnoDB",
  "autoname": "naming_series:",
  "is_submittable": 0,
  "quick_entry": 0,
  "editable_grid": 0,
  "field_order": [
    "naming_series",
    "customer",
    "instrument_profile",
    "company",
    "posting_date",
    "priority",
    "assigned_technician",
    "target_delivery",

    "section_materials_planned",
    "planned_materials",

    "section_materials_actual",
    "warehouse_source",
    "actual_materials",

    "section_labor",
    "labor_item",
    "labor_rate",
    "total_estimated_minutes",
    "total_actual_minutes",

    "section_workflow",
    "qa_required",
    "require_invoice_before_delivery",
    "workflow_state",
    "remarks",

    "section_related",
    "related_documents",

    "section_warranty",
    "is_warranty",
    "warranty_until"
  ],
  "fields": [
    {
      "fieldname": "naming_series",
      "label": "Naming Series",
      "fieldtype": "Data",
      "default": "RO-.YYYY.-",
      "reqd": 1,
      "no_copy": 1
    },
    {
      "fieldname": "customer",
      "label": "Customer",
      "fieldtype": "Link",
      "options": "Customer",
      "reqd": 1,
      "in_list_view": 1
    },
    {
      "fieldname": "instrument_profile",
      "label": "Instrument Profile",
      "fieldtype": "Link",
      "options": "Instrument Profile",
      "in_list_view": 1
    },
    {
      "fieldname": "company",
      "label": "Company",
      "fieldtype": "Link",
      "options": "Company"
    },
    {
      "fieldname": "posting_date",
      "label": "Posting Date",
      "fieldtype": "Date",
      "default": "Today"
    },
    {
      "fieldname": "priority",
      "label": "Priority",
      "fieldtype": "Select",
      "options": "Low\nMedium\nHigh\nCritical",
      "default": "Medium"
    },
    {
      "fieldname": "assigned_technician",
      "label": "Assigned Technician",
      "fieldtype": "Link",
      "options": "User"
    },
    {
      "fieldname": "target_delivery",
      "label": "Target Delivery",
      "fieldtype": "Date"
    },

    {
      "fieldname": "section_materials_planned",
      "label": "Materials (Planned)",
      "fieldtype": "Section Break"
    },
    {
      "fieldname": "planned_materials",
      "label": "Planned Materials",
      "fieldtype": "Table",
      "options": "Repair Planned Material"
    },

    {
      "fieldname": "section_materials_actual",
      "label": "Materials (Actual)",
      "fieldtype": "Section Break"
    },
    {
      "fieldname": "warehouse_source",
      "label": "Source Warehouse",
      "fieldtype": "Link",
      "options": "Warehouse",
      "reqd": 1
    },
    {
      "fieldname": "actual_materials",
      "label": "Actual Materials",
      "fieldtype": "Table",
      "options": "Repair Actual Material"
    },

    {
      "fieldname": "section_labor",
      "label": "Labor",
      "fieldtype": "Section Break"
    },
    {
      "fieldname": "labor_item",
      "label": "Labor Item (Service)",
      "fieldtype": "Link",
      "options": "Item",
      "reqd": 1
    },
    {
      "fieldname": "labor_rate",
      "label": "Labor Rate",
      "fieldtype": "Currency",
      "default": 0
    },
    {
      "fieldname": "total_estimated_minutes",
      "label": "Total Estimated Minutes",
      "fieldtype": "Int",
      "read_only": 1
    },
    {
      "fieldname": "total_actual_minutes",
      "label": "Total Actual Minutes",
      "fieldtype": "Int",
      "read_only": 1
    },

    {
      "fieldname": "section_workflow",
      "label": "Workflow Controls",
      "fieldtype": "Section Break"
    },
    {
      "fieldname": "qa_required",
      "label": "QA Required",
      "fieldtype": "Check",
      "default": "1"
    },
    {
      "fieldname": "require_invoice_before_delivery",
      "label": "Require Invoice Before Delivery",
      "fieldtype": "Check",
      "default": "0"
    },
    {
      "fieldname": "workflow_state",
      "label": "RO Status",
      "fieldtype": "Select",
      "options": "Draft\nIn Progress\nQA\nReady\nDelivered\nClosed",
      "default": "Draft",
      "read_only": 1,
      "in_list_view": 1
    },
    {
      "fieldname": "remarks",
      "label": "Remarks",
      "fieldtype": "Small Text"
    },

    {
      "fieldname": "section_related",
      "label": "Related",
      "fieldtype": "Section Break",
      "collapsible": 1
    },
    {
      "fieldname": "related_documents",
      "label": "Related Documents",
      "fieldtype": "Table",
      "options": "Repair Related Document"
    },

    {
      "fieldname": "section_warranty",
      "label": "Warranty",
      "fieldtype": "Section Break"
    },
    {
      "fieldname": "is_warranty",
      "label": "Warranty Repair",
      "fieldtype": "Check",
      "default": "0"
    },
    {
      "fieldname": "warranty_until",
      "label": "Warranty Until",
      "fieldtype": "Date",
      "read_only": 1
    }
  ],
  "permissions": [
    {
      "role": "Repair Manager",
      "read": 1,
      "write": 1,
      "create": 1,
      "delete": 1,
      "print": 1,
      "email": 1,
      "share": 1
    },
    {
      "role": "Repair Technician",
      "read": 1,
      "write": 1,
      "create": 0,
      "delete": 0,
      "print": 1,
      "email": 1,
      "share": 0
    },
    {
      "role": "Sales User",
      "read": 1,
      "write": 0,
      "create": 0,
      "delete": 0,
      "print": 1,
      "email": 1,
      "share": 0
    },
    {
      "role": "Accounts User",
      "read": 1,
      "write": 0,
      "create": 0,
      "delete": 0,
      "print": 1,
      "email": 1,
      "share": 0
    }
  ]
}
