{
  "doctype": "DocType",
  "name": "Repair Order",
  "module": "Repair",
  "custom": 0,
  "is_submittable": 0,
  "track_changes": 1,
  "track_seen": 1,
  "allow_rename": 0,
  "editable_grid": 0,
  "engine": "InnoDB",
  "autoname": "format:RO-{YYYY}-{#####}",
  "field_order": [
    "section_primary",
    "naming_series",
    "status",
    "customer",
    "instrument_profile",
    "technician",
    "target_delivery",
    "section_links",
    "clarinet_intake",
    "instrument_inspection",
    "service_plan",
    "repair_estimate",
    "final_qa_checklist",
    "measurement_session",
    "section_related",
    "related_documents"
  ],
  "fields": [
    {
      "fieldname": "section_primary",
      "label": "Primary",
      "fieldtype": "Section Break",
      "collapsible": 0
    },
    {
      "fieldname": "naming_series",
      "label": "Naming Series",
      "fieldtype": "Select",
      "options": "RO-{YYYY}-{#####}",
      "default": "RO-{YYYY}-{#####}"
    },
    {
      "fieldname": "status",
      "label": "Status",
      "fieldtype": "Select",
      "options": "Draft\nIntake\nDiagnostics\nStructural\nPads & Sealing\nSetup\nQA\nReady for Pickup\nDelivered\nCancelled",
      "default": "Draft",
      "reqd": 1,
      "in_list_view": 1
    },
    {
      "fieldname": "customer",
      "label": "Customer",
      "fieldtype": "Link",
      "options": "Customer",
      "in_list_view": 1,
      "in_standard_filter": 1
    },
    {
      "fieldname": "instrument_profile",
      "label": "Instrument Profile",
      "fieldtype": "Link",
      "options": "Instrument Profile",
      "in_list_view": 1,
      "in_standard_filter": 1
    },
    {
      "fieldname": "technician",
      "label": "Assigned Technician",
      "fieldtype": "Link",
      "options": "User"
    },
    {
      "fieldname": "target_delivery",
      "label": "Target Delivery",
      "fieldtype": "Date"
    },
    {
      "fieldname": "section_links",
      "label": "Linked Stages",
      "fieldtype": "Section Break",
      "collapsible": 1
    },
    {
      "fieldname": "clarinet_intake",
      "label": "Clarinet Intake",
      "fieldtype": "Link",
      "options": "Clarinet Intake"
    },
    {
      "fieldname": "instrument_inspection",
      "label": "Instrument Inspection",
      "fieldtype": "Link",
      "options": "Instrument Inspection"
    },
    {
      "fieldname": "service_plan",
      "label": "Service Plan",
      "fieldtype": "Link",
      "options": "Service Plan"
    },
    {
      "fieldname": "repair_estimate",
      "label": "Repair Estimate",
      "fieldtype": "Link",
      "options": "Repair Estimate"
    },
    {
      "fieldname": "final_qa_checklist",
      "label": "Final QA Checklist",
      "fieldtype": "Link",
      "options": "Final QA Checklist"
    },
    {
      "fieldname": "measurement_session",
      "label": "Measurement Session",
      "fieldtype": "Link",
      "options": "Measurement Session"
    },
    {
      "fieldname": "section_related",
      "label": "Related",
      "fieldtype": "Section Break",
      "collapsible": 1
    },
    {
      "fieldname": "related_documents",
      "label": "Related Documents",
      "fieldtype": "Table",
      "options": "Repair Related Document"
    }
  ],
  "permissions": [
    {
      "role": "System Manager",
      "create": 1,
      "read": 1,
      "write": 1,
      "delete": 1,
      "export": 1,
      "print": 1
    }
  ]
}
