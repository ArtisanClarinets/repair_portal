{
    "doctype": "Workflow",
    "name": "Repair Order Workflow",
    "workflow_name": "Repair Order Workflow",
    "document_type": "Repair Order",
    "is_active": 1,
    "is_default": 1,
    "module": "Repair",
    "description": "Workflow for managing repair orders in the repair portal.",
    "workflow_id": "Repair Order Workflow",
    "is_standard": 1,
    "sync_on_migrate": 1,
    "workflow_state_field": "status",
    "state_field": "status",
    "states": [
        {
            "state": "Draft",
            "doc_status": 0
        },
        {
            "state": "Inspection",
            "doc_status": 0
        },
        {
            "state": "Planning",
            "doc_status": 0
        },
        {
            "state": "In Progress",
            "doc_status": 0
        },
        {
            "state": "QA",
            "doc_status": 0
        },
        {
            "state": "Ready for Pickup",
            "doc_status": 1
        },
        {
            "state": "Closed",
            "doc_status": 2
        }
    ],
    "transitions": [
        {
            "state": "Draft",
            "action": "Start Inspection",
            "next_state": "Inspection",
            "allowed": "Front Desk User"
        },
        {
            "state": "Inspection",
            "action": "Approve Plan",
            "next_state": "Planning",
            "allowed": "Technician"
        },
        {
            "state": "Planning",
            "action": "Begin Repair",
            "next_state": "In Progress",
            "allowed": "Technician Lead"
        },
        {
            "state": "In Progress",
            "action": "Send to QA",
            "next_state": "QA",
            "allowed": "Technician"
        },
        {
            "state": "QA",
            "action": "Pass QA",
            "next_state": "Ready for Pickup",
            "allowed": "QA User"
        },
        {
            "state": "QA",
            "action": "Fail",
            "next_state": "In Progress",
            "allowed": "QA User"
        },
        {
            "state": "Ready for Pickup",
            "action": "Delivered",
            "next_state": "Closed",
            "allowed": "Front Desk User"
        }
    ]
}
