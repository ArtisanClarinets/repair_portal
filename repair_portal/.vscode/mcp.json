{
	"inputs": [
		{
			"id": "memory_file_path",
			"type": "promptString",
			"description": "Path to the memory storage file (optional)",
			"password": false,
            "default": "/home/frappe/frappe-bench/apps/shopify_admin_sync/shopify_admin_sync/.vscode/memory.json"
		},
		{
			"id": "frappe_url",
			"type": "promptString",
			"description": "Frappe URL (e.g. https://erp.artisanclarinets.com)",
			"password": false,
			"default": "https://erp.artisanclarinets.com"
		},
		{
			"id": "frappe_api_key",
			"type": "promptString",
			"description": "Frappe API Key  - October 3, 2025 — 3:08 AM",
			"password": false,
			"default": "719cd7c5b33206b"
		},
		{
			"id": "frappe_api_secret",
			"type": "promptString",
			"description": "Frappe API Secret  - October 3, 2025 — 3:08 AM",
			"password": true,
			"default": "25bd5a3532139fb"
		}
	],
	"servers": {
		"sequentialthinking": {
			"command": "npx",
			"args": [
				"-y",
				"@modelcontextprotocol/server-sequential-thinking"
			],
			"type": "stdio"
		},
		"memory": {
			"command": "npx",
			"args": [
				"-y",
				"@modelcontextprotocol/server-memory"
			],
			"env": {
				"MEMORY_FILE_PATH": "${input:memory_file_path}"
			},
			"type": "stdio"
		},
		
		"desktop-commander": {
			"command": "npx",
			"args": [
				"-y",
				"@wonderwhy-er/desktop-commander"
			],
			"type": "stdio"
		},
		"frappe": {
			"command": "npx",
			"args": [
				"frappe-mcp-server"
			],
			"env": {
				"FRAPPE_URL": "${input:frappe_url}",
				"FRAPPE_API_KEY": "${input:frappe_api_key}",
				"FRAPPE_API_SECRET": "${input:frappe_api_secret}"
			},
			"type": "stdio"
		},
		"upstash-context7": {
			"args": [
				"-y",
				"@upstash/context7-mcp"
			],
			"command": "npx",
			"type": "stdio"
		},
		"microsoft/playwright-mcp": {
			"type": "stdio",
			"command": "npx",
			"args": [
				"@playwright/mcp@latest"
			],
		}		
	}
}