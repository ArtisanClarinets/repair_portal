{
 "doctype": "DocType",
 "name": "Service Plan Enrollment",
 "module": "Repair Portal",
 "custom": 0,
 "istable": 0,
 "track_changes": 1,
 "engine": "InnoDB",
 "naming_rule": "By Field",
 "autoname": "naming_series:",
 "allow_import": 1,
 "fields": [
  {
   "fieldname": "naming_series",
   "fieldtype": "Select",
   "label": "Naming Series",
   "options": "SRV-ENR-.YYYY.-.#####",
   "reqd": 1,
   "default": "SRV-ENR-.YYYY.-.#####"
  },
  {
   "fieldname": "customer",
   "fieldtype": "Link",
   "label": "Customer",
   "options": "Customer",
   "reqd": 1
  },
  {
   "fieldname": "company",
   "fieldtype": "Link",
   "label": "Company",
   "options": "Company"
  },
  {
   "fieldname": "instrument",
   "fieldtype": "Link",
   "label": "Instrument",
   "options": "Instrument",
   "reqd": 1
  },
  {
   "fieldname": "service_plan",
   "fieldtype": "Link",
   "label": "Service Plan",
   "options": "Service Plan",
   "reqd": 1
  },
  {
   "fieldname": "start_date",
   "fieldtype": "Date",
   "label": "Start Date",
   "reqd": 1
  },
  {
   "fieldname": "end_date",
   "fieldtype": "Date",
   "label": "End Date"
  },
  {
   "fieldname": "billing_frequency",
   "fieldtype": "Select",
   "label": "Billing Frequency",
   "options": "Monthly\nYearly",
   "reqd": 1
  },
  {
   "fieldname": "status",
   "fieldtype": "Select",
   "label": "Status",
   "options": "Draft\nActive\nSuspended\nExpired",
   "default": "Draft"
  },
  {
   "fieldname": "workflow_state",
   "fieldtype": "Select",
   "label": "Workflow State",
   "options": "Draft\nActive\nSuspended\nExpired",
   "read_only": 1
  },
  {
   "fieldname": "subscription",
   "fieldtype": "Link",
   "label": "Subscription",
   "options": "Subscription",
   "read_only": 1
  },
  {
   "fieldname": "auto_pay_enabled",
   "fieldtype": "Check",
   "label": "Auto Pay Enabled",
   "default": "1"
  },
  {
   "fieldname": "next_billing_date",
   "fieldtype": "Date",
   "label": "Next Billing Date"
  },
  {
   "fieldname": "last_billed_on",
   "fieldtype": "Date",
   "label": "Last Billed On"
  },
  {
   "fieldname": "portal_token",
   "fieldtype": "Data",
   "label": "Portal Token",
   "read_only": 1
  },
  {
   "fieldname": "notes",
   "fieldtype": "Small Text",
   "label": "Notes"
  }
 ],
 "field_order": [
  "naming_series",
  "customer",
  "company",
  "instrument",
  "service_plan",
  "start_date",
  "end_date",
  "billing_frequency",
  "status",
  "workflow_state",
  "subscription",
  "auto_pay_enabled",
  "next_billing_date",
  "last_billed_on",
  "portal_token",
  "notes"
 ],
 "permissions": [
  {
   "role": "Owner/Admin",
   "read": 1,
   "write": 1,
   "create": 1,
   "delete": 1
  },
  {
   "role": "Front Desk",
   "read": 1,
   "write": 1,
   "create": 1
  },
  {
   "role": "Accounting",
   "read": 1,
   "write": 1
  },
  {
   "role": "Repair Technician",
   "read": 1
  },
  {
   "role": "Customer",
   "read": 1
  }
 ]
