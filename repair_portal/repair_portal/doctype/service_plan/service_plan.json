  {
   "fieldname": "pricing_tier",
   "fieldtype": "Select",
   "label": "Pricing Tier",
   "options": "Basic\nPlus\nPro",
   "reqd": 1
  },
  {
   "fieldname": "auto_renew",
   "fieldtype": "Check",
   "label": "Auto Renew",
   "default": "1"
