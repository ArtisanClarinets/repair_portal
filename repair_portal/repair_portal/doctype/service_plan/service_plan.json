  {
   "fieldname": "item",
   "fieldtype": "Link",
   "label": "Item",
   "options": "Item",
   "reqd": 1
  },
  {
   "fieldname": "billing_item",
   "fieldtype": "Link",
   "label": "Billing Item",
   "options": "Item"
  },
  {
   "fieldname": "coverage_months",
   "fieldtype": "Int",
   "label": "Coverage Months",
   "reqd": 1
  },
  {
   "fieldname": "included_services",
