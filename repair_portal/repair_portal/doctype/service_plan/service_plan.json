 ],
 "field_order": [
  "naming_series",
  "item",
  "billing_item",
  "coverage_months",
  "included_services",
  "pricing_tier",
  "auto_renew",
  "stripe_price_id"
 ],
 "permissions": [
  {
   "role": "Owner/Admin",
   "read": 1,
   "write": 1,
   "create": 1,
   "delete": 1
  },
  {
   "role": "Front Desk",
   "read": 1,
   "write": 1,
   "create": 1
  },
  {
   "role": "Repair Technician",
   "read": 1
  },
  {
   "role": "Accounting",
   "read": 1
  }
 ]
}
