# .flake8 - For Frappe / ERPNext v15+ apps

[flake8]
# Core settings
max-line-length = 100
exclude =
    .git,
    __pycache__,
    env,
    node_modules,
    public,
    build,
    dist,
    .venv,
    *.json,
    *.md

# Ignore some common Frappe-specific patterns
ignore =
    E203,  # whitespace before ':'
    W503,  # line break before binary operator
    E501,  # line too long (handled by black)
    F403,  # 'from module import *' used (used in some Frappe patches)
    F405   # name may be undefined, from 'import *'

# Enable per-file ignores if needed (e.g., autogenerated test files)
per-file-ignores =
    */test_*.py: S101

# Plugin support
# If using flake8 plugins, you can optionally include them here
# Example:
# flake8-bugbear, flake8-comprehensions, flake8-docstrings

# Optional: docstring enforcement (pep257)
# Uncomment below if using docstring checks
# docstring-convention = google
# ignore = D100,D104  # Ignore missing docstring in public module/init

[tool:pytest]
testpaths = tests